    <video id="camera-video" autoplay playsinline muted></video>
    <div id="christmas-filter"></div>
    <canvas id="game-canvas"></canvas>

    <div id="ui-layer">
        <div class="hud">
            <div class="hud-item">
                <span style="font-size:1.4rem">üéÅ</span> <span id="score">0</span>
            </div>
            <div class="hud-item">
                <span style="font-size:1.4rem">‚ù§Ô∏è</span> <span id="lives">3</span>
            </div>
        </div>
    </div>

    <div id="overlay">
        <h1>üéÑ Ca√ßa-Presentes</h1>
        <p>
            A Metaverse Agency te convida para essa aventura de Natal!<br>
            Use sua c√¢mera para encontrar os presentes.
        </p>
        
        <button id="start-btn">Come√ßar Jogo</button>
        
        <button id="retry-cam" style="display:none; background:#d32f2f; border-color:#ff5252;">
            ‚ö†Ô∏è Tentar C√¢mera
        </button>

        <div class="debug-console" id="debug-log">Status: Aguardando...</div>
    </div>

    <script>
        const canvas = document.getElementById('game-canvas');
        const ctx = canvas.getContext('2d');
        const video = document.getElementById('camera-video');
        const overlay = document.getElementById('overlay');
        const startBtn = document.getElementById('start-btn');
        const retryBtn = document.getElementById('retry-cam');
        const scoreEl = document.getElementById('score');
        const livesEl = document.getElementById('lives');
        const debugLog = document.getElementById('debug-log');
        const filterLayer = document.getElementById('christmas-filter');

        let width, height;
        let gameActive = false;
        let score = 0;
        let lives = 3;
        let difficulty = 1;
        let lastTime = 0;
        let spawnTimer = 0;
        let cameraWorks = false;

        // IA de Rosto
        let faceModel = null;
        let detectedFaces = [];
        let lastFaceDetectTime = 0;
        const FACE_DETECT_INTERVAL = 150;

        // Entidades
        let presents = [];
        let effects = [];
        let snowflakes = [];
        const giftTypes = ['üéÅ', 'üì¶', 'üéÄ', 'üéÖ', 'üéÑ', 'üß∏', 'üõçÔ∏è', 'üç™', 'ü•õ'];
        const colors = ['#ff0000', '#00ff00', '#ffffff', '#ffff00', '#FFD700'];

        function resize() {
            width = window.innerWidth;
            height = window.innerHeight;
            canvas.width = width;
            canvas.height = height;
        }
        window.addEventListener('resize', resize);
        resize();

        function log(msg) {
            console.log(msg);
            debugLog.innerHTML = msg;
        }

        async function loadFaceModel() {
            try {
                log("Carregando gorro...");
                faceModel = await blazeface.load();
                log("Modelo carregado!");
            } catch (e) {
                console.error("Erro IA:", e);
                log("Aviso: Sem detec√ß√£o facial.");
            }
        }

        async function startCamera() {
            log("Iniciando c√¢mera...");
            retryBtn.style.display = 'none';

            if (location.protocol !== 'https:' && location.hostname !== 'localhost') {
                log("ERRO: HTTPS necess√°rio.");
                return false;
            }

            try {
                const constraints = {
                    audio: false,
                    video: {
                        facingMode: 'user',
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    }
                };

                const stream = await navigator.mediaDevices.getUserMedia(constraints);
                video.srcObject = stream;
                await video.play();
                
                cameraWorks = true;
                log("C√¢mera ativa!");
                video.style.display = 'block';
                filterLayer.style.display = 'block';
                return true;

            } catch (err) {
                console.error(err);
                log("‚ö†Ô∏è Erro na c√¢mera. Modo gr√°fico.");
                retryBtn.style.display = 'inline-block';
                cameraWorks = false;
                video.style.display = 'none';
                filterLayer.style.display = 'none';
                return false;
            }
        }

        async function detectFaces(timestamp) {
            if (!faceModel || !cameraWorks || !video.readyState === 4) return;
            
            if (timestamp - lastFaceDetectTime < FACE_DETECT_INTERVAL) return;
            lastFaceDetectTime = timestamp;

            const returnTensors = false;
            const predictions = await faceModel.estimateFaces(video, returnTensors);
            
            if (predictions.length > 0) {
                detectedFaces = predictions;
            } else {
                if (timestamp - lastFaceDetectTime > 500) detectedFaces = [];
            }
        }

        function drawSantaHat(ctx, face) {
            const start = face.topLeft;
            const end = face.bottomRight;
            const faceWidth = end[0] - start[0];

            const videoW = video.videoWidth;
            const videoH = video.videoHeight;
            const screenW = canvas.width;
            const screenH = canvas.height;

            const videoRatio = videoW / videoH;
            const screenRatio = screenW / screenH;
            
            let scale, offsetX, offsetY;

            if (screenRatio > videoRatio) {
                scale = screenW / videoW;
                offsetX = 0;
                offsetY = (videoH * scale - screenH) / 2;
            } else {
                scale = screenH / videoH;
                offsetX = (videoW * scale - screenW) / 2;
                offsetY = 0;
            }
            
            const faceX = (start[0] * scale) - offsetX;
            const faceY = (start[1] * scale) - offsetY;
            const scaledFaceWidth = faceWidth * scale;

            const hatCenterX = faceX + (scaledFaceWidth / 2);
            const hatBottomY = faceY - (scaledFaceWidth * 0.1); 
            
            const hatWidth = scaledFaceWidth * 1.5;
            const hatHeight = hatWidth * 1.2;

            ctx.save();
            ctx.translate(hatCenterX, hatBottomY);
            ctx.shadowColor = "rgba(0,0,0,0.5)";
            ctx.shadowBlur = 10;

            // Gorro
            ctx.beginPath();
            ctx.moveTo(-hatWidth/2, 0);
            ctx.quadraticCurveTo(0, -hatHeight, hatWidth/2, 0); 
            ctx.quadraticCurveTo(0, -20, -hatWidth/2, 0);
            ctx.fillStyle = "#D42426"; 
            ctx.fill();

            // Ponta
            ctx.beginPath();
            ctx.moveTo(hatWidth/4, -hatHeight/1.5);
            ctx.quadraticCurveTo(hatWidth/1.2, -hatHeight/2, hatWidth/1.4, -hatHeight/4);
            ctx.lineTo(0, -hatHeight/2); 
            ctx.fillStyle = "#D42426";
            ctx.fill();

            // Pompom
            ctx.beginPath();
            ctx.arc(hatWidth/1.4, -hatHeight/4, hatWidth/6, 0, Math.PI*2);
            ctx.fillStyle = "#FFFFFF";
            ctx.fill();

            // Base
            ctx.beginPath();
            ctx.roundRect(-hatWidth/1.8, -10, hatWidth * 1.1, hatWidth/4, 20);
            ctx.fillStyle = "#FFFFFF";
            ctx.fill();

            ctx.restore();
        }

        class Snowflake {
            constructor() { this.init(true); }
            init(firstTime = false) {
                this.x = Math.random() * width;
                this.y = firstTime ? Math.random() * height : -10;
                this.size = Math.random() * 3 + 2;
                this.speedY = Math.random() * 1.5 + 0.5;
                this.speedX = (Math.random() - 0.5) * 0.5;
                this.opacity = Math.random() * 0.5 + 0.3;
            }
            update() {
                this.y += this.speedY;
                this.x += this.speedX;
                if (this.y > height) this.init();
            }
            draw() {
                ctx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        class Present {
            constructor() {
                this.size = 60 + Math.random() * 30;
                this.x = Math.random() * (width - this.size);
                this.y = -100;
                this.speed = (3 + Math.random() * 2) * difficulty;
                this.emoji = giftTypes[Math.floor(Math.random() * giftTypes.length)];
                this.rotation = Math.random();
                this.rotSpeed = (Math.random() - 0.5) * 0.05;
                this.markedForDeletion = false;
                this.wobble = Math.random() * Math.PI * 2;
            }
            update() {
                this.y += this.speed;
                this.rotation += this.rotSpeed;
                this.wobble += 0.05;
                this.x += Math.sin(this.wobble) * 2;
                if (this.y > height) {
                    this.markedForDeletion = true;
                    takeDamage();
                }
            }
            draw() {
                ctx.save();
                ctx.translate(this.x + this.size/2, this.y + this.size/2);
                ctx.rotate(this.rotation);
                ctx.shadowColor = "#FFD700";
                ctx.shadowBlur = 20;
                ctx.font = `${this.size}px Arial`;
                ctx.textAlign = "center";
                ctx.textBaseline = "middle";
                ctx.fillText(this.emoji, 0, 0);
                ctx.restore();
            }
        }

        class Effect {
            constructor(x, y, type) {
                this.x = x;
                this.y = y;
                this.type = type;
                this.life = 1.0;
                this.size = type === 'touch' ? 10 : 50;
                this.color = colors[Math.floor(Math.random() * colors.length)];
            }
            update() {
                this.life -= 0.05;
                if (this.type === 'touch') this.size += 5;
                if (this.type === 'collect') this.size += 2;
            }
            draw() {
                ctx.globalAlpha = this.life;
                ctx.lineWidth = 3;
                if (this.type === 'touch') {
                    ctx.strokeStyle = "white";
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI*2);
                    ctx.stroke();
                } else {
                    ctx.fillStyle = this.color;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI*2);
                    ctx.fill();
                    ctx.fillStyle = "#FFD700";
                    ctx.font = "bold 30px Arial";
                    ctx.fillText("+10", this.x, this.y - this.size);
                }
                ctx.globalAlpha = 1.0;
            }
        }

        function handleInput(e) {
            if (!gameActive) return;
            e.preventDefault();
            let inputs = [];
            if (e.type === 'touchstart') {
                for (let i = 0; i < e.changedTouches.length; i++) {
                    inputs.push({ x: e.changedTouches[i].clientX, y: e.changedTouches[i].clientY });
                }
            } else {
                inputs.push({ x: e.clientX, y: e.clientY });
            }
            inputs.forEach(pos => {
                effects.push(new Effect(pos.x, pos.y, 'touch'));
                for (let i = presents.length - 1; i >= 0; i--) {
                    let p = presents[i];
                    let dist = Math.sqrt(Math.pow(pos.x - (p.x + p.size/2), 2) + Math.pow(pos.y - (p.y + p.size/2), 2));
                    if (dist < p.size * 0.9) {
                        presents.splice(i, 1);
                        collectPresent(pos.x, pos.y);
                        break;
                    }
                }
            });
        }

        function collectPresent(x, y) {
            score += 10;
            scoreEl.innerText = score;
            effects.push(new Effect(x, y, 'collect'));
            if (score % 50 === 0) difficulty += 0.2;
        }

        function takeDamage() {
            lives--;
            livesEl.innerText = lives;
            let flash = document.createElement('div');
            Object.assign(flash.style, {position:'absolute', top:0, left:0, width:'100%', height:'100%', background:'red', opacity:0.4, pointerEvents:'none', zIndex:15});
            document.body.appendChild(flash);
            setTimeout(() => flash.remove(), 200);
            if (lives <= 0) gameOver();
        }

        function createSelfie() {
            ctx.clearRect(0, 0, width, height);
            if (cameraWorks) {
                const vidRatio = video.videoWidth / video.videoHeight;
                const screenRatio = width / height;
                let sx, sy, sWidth, sHeight;
                if (screenRatio > vidRatio) {
                    sWidth = video.videoWidth;
                    sHeight = video.videoWidth / screenRatio;
                    sx = 0;
                    sy = (video.videoHeight - sHeight) / 2;
                } else {
                    sHeight = video.videoHeight;
                    sWidth = video.videoHeight * screenRatio;
                    sx = (video.videoWidth - sWidth) / 2;
                    sy = 0;
                }
                ctx.drawImage(video, sx, sy, sWidth, sHeight, 0, 0, width, height);
                if (detectedFaces.length > 0) detectedFaces.forEach(face => drawSantaHat(ctx, face));
            } else {
                let grad = ctx.createLinearGradient(0,0,0,height);
                grad.addColorStop(0, "#2E004E");
                grad.addColorStop(1, "#000000");
                ctx.fillStyle = grad;
                ctx.fillRect(0, 0, width, height);
            }

            const metaPurple = "#4B0082";
            const metaGold = "#FFD700";
            
            ctx.lineWidth = 15;
            ctx.strokeStyle = metaPurple;
            ctx.strokeRect(0, 0, width, height);
            
            ctx.lineWidth = 3;
            ctx.strokeStyle = metaGold;
            ctx.strokeRect(10, 10, width-20, height-20);

            const footerH = Math.min(height * 0.35, 250); 
            const footerY = height - footerH;

            ctx.save();
            ctx.shadowColor = "black";
            ctx.shadowBlur = 20;
            ctx.shadowOffsetY = -5;
            const grd = ctx.createLinearGradient(0, footerY, 0, height);
            grd.addColorStop(0, "rgba(75, 0, 130, 0.95)");
            grd.addColorStop(1, "rgba(20, 0, 40, 1)");
            ctx.fillStyle = grd;
            ctx.fillRect(0, footerY, width, footerH);

            ctx.beginPath();
            ctx.moveTo(0, footerY);
            ctx.lineTo(width, footerY);
            ctx.lineWidth = 4;
            ctx.strokeStyle = metaGold;
            ctx.stroke();
            ctx.restore();

            const centerX = width / 2;
            const contentStartY = footerY + 45;

            ctx.textAlign = "center";
            ctx.textBaseline = "top";

            let fontSizeTitle = Math.min(width * 0.08, 32);
            ctx.font = `900 ${fontSizeTitle}px "Segoe UI", Roboto, Arial, sans-serif`; 
            ctx.fillStyle = "#FFFFFF";
            ctx.shadowColor = "rgba(0,0,0,0.5)";
            ctx.shadowBlur = 4;
            ctx.fillText("METAVERSE AGENCY", centerX, contentStartY);

            ctx.shadowBlur = 0; 
            let currentY = contentStartY + fontSizeTitle + 15;
            let fontSizeSub = Math.min(width * 0.05, 20);
            ctx.font = `bold ${fontSizeSub}px "Segoe UI", Arial, sans-serif`;
            ctx.fillStyle = metaGold;
            ctx.fillText("DESEJA A VOC√ä UM FELIZ NATAL!", centerX, currentY);

            currentY += fontSizeSub + 15;
            let fontSizeBody = Math.min(width * 0.045, 16);
            ctx.font = `italic 300 ${fontSizeBody}px "Segoe UI", sans-serif`;
            ctx.fillStyle = "#E0E0E0";
            ctx.fillText("Independentemente do n√∫mero de presentes,", centerX, currentY);
            ctx.fillText("que haja muita alegria!", centerX, currentY + fontSizeBody * 1.5);

            return canvas.toDataURL('image/png');
        }

        function gameOver() {
            gameActive = false;
            const photoData = createSelfie();
            overlay.innerHTML = `
                <h1 style="font-size: 2rem; margin-bottom: 5px">üéÑ Fim de Jogo!</h1>
                <p style="font-size: 1.1rem; margin-bottom: 10px; color:#ddd">Pontua√ß√£o: <strong>${score}</strong> üéÅ</p>
                
                <img id="final-photo" src="${photoData}" alt="Sua Selfie de Natal">
                
                <a href="${photoData}" download="natal-metaverse-agency.png" class="download-btn">
                    <span>‚¨áÔ∏è</span> Baixar Foto
                </a>

                <button onclick="window.location.reload()" style="margin-top: 15px; background: transparent; border: 1px solid rgba(255,255,255,0.3); font-size: 0.9rem; padding: 10px 20px;">
                    Jogar Novamente
                </button>
            `;
            overlay.style.display = 'flex';
        }

        function loop(timestamp) {
            if (!gameActive) return;
            let deltaTime = timestamp - lastTime;
            lastTime = timestamp;
            ctx.clearRect(0, 0, width, height);

            if (!cameraWorks) {
                let grad = ctx.createLinearGradient(0,0,0,height);
                grad.addColorStop(0, "#004d00");
                grad.addColorStop(1, "#800000");
                ctx.fillStyle = grad;
                ctx.fillRect(0, 0, width, height);
                ctx.fillStyle = "rgba(255,255,255,0.2)";
                for(let i=0; i<30; i++) ctx.fillRect(Math.random()*width, Math.random()*height, 2, 2); 
            } else {
                detectFaces(timestamp);
                detectedFaces.forEach(face => drawSantaHat(ctx, face));
            }

            snowflakes.forEach(flake => { flake.update(); flake.draw(); });

            if (timestamp - spawnTimer > 1500 / difficulty) {
                presents.push(new Present());
                spawnTimer = timestamp;
            }

            presents.forEach(p => { p.update(); p.draw(); });
            presents = presents.filter(p => !p.markedForDeletion);
            effects.forEach((e, index) => { e.update(); e.draw(); if (e.life <= 0) effects.splice(index, 1); });

            requestAnimationFrame(loop);
        }

        async function initGame() {
            loadFaceModel();
            await startCamera();
            overlay.style.display = 'none';
            score = 0;
            lives = 3;
            difficulty = 1;
            presents = [];
            effects = [];
            snowflakes = [];
            for(let i=0; i<60; i++) snowflakes.push(new Snowflake());
            gameActive = true;
            lastTime = performance.now();
            requestAnimationFrame(loop);
        }

        startBtn.addEventListener('click', initGame);
        retryBtn.addEventListener('click', () => {
            retryBtn.style.display = 'none';
            log("Tentando novamente...");
            startCamera();
        });

        window.addEventListener('mousedown', handleInput);
        window.addEventListener('touchstart', handleInput, { passive: false });
    </script>
</body>
</html>
